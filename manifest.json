{
  "manifest_version": 2,
  "name": "ClickTranslate",
  "version": "1.0",
  "description": "Click on any text to see it's translation!",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
      "default_icon": "icon16.png",
      "default_title": "ClickTranslate",
      "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "<all_urls>"
  ]
}
